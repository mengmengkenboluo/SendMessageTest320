<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/more_image"
        android:background="@drawable/bg_loading_poi_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/more_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="菲特堡自助经典"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/more_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="5.5km" />

        <TextView
            android:id="@+id/more_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/more_name"
            android:layout_marginTop="10dp"
            android:lines="2"
            android:text="单人自助午餐/单人自助晚餐2选1，免预约" />

        <TextView
            android:id="@+id/more_price"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="￥50"
            android:textColor="@color/meituan"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/more_sale"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/more_details"
            android:gravity="bottom"
            android:text="已售12123"
            android:textSize="10dp" />
    </RelativeLayout>

</LinearLayout>
