<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/ll_city"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/meituan"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_loction"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="定位"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="10dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_arrow_white_down" />

        <EditText
            android:id="@+id/et_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/edit_shape"
            android:drawableLeft="@drawable/abc_ic_search"
            android:hint="输入商家,分类或商圈"
            android:textColorHint="@color/white" />

        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:src="@drawable/actionbar_icon_msg" />

        <ImageView
            android:id="@+id/iv_loginactivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:src="@drawable/actionbar_icon_scan" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.xiao.myself.MyListView
            android:id="@+id/id_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
        </com.xiao.myself.MyListView>


    </LinearLayout>
</LinearLayout>
